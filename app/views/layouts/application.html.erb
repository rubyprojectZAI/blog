<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :all %>



</head>
<body>
<div id="wrapper">
	

<script type="text/javascript">
function open_login_box(){
		$('login_box').setStyle({
  			display: 'block'
		});
}

function close_login_box(){
		$('login_box').setStyle({
  			display: 'none'
		});
}
	
</script>

	<div id="login_link"><%= session[:login]%> | <a onClick="javascript:open_login_box();" >Zaloguj</a> | <%= link_to 'Zarejestruj', "users/new" %></div>
	<div id="login_box">
		<%= render "access/login"%>
		
	</div>
	
	<div id="header"></div>
	<div id="content">
		<%= yield %>
	</div>
