<h1>Login</h1>
<div class="login">

	<%= session[:login]%>

	<% if !flash[:notice].blank?%>
		<div class="notice">
			<%= flash[:notice]%>
			
		</div>
	<% end %>
	<%= form_tag(:action => 'attempt_login') do %>
		<div class="field">
			<%= label_tag(:login) %>
		<div/>
		<div class="field">
			<%= text_field_tag(:login)  %>
		<div/>
		<div class="field">
			<%= label_tag(:password) %>
		<div/>
		<div class="field">
			<%= password_field_tag(:password) %>
		<div/>
		<div class="field">
			<%= submit_tag("Log in") %>
		</div>
	<% end%>
</div>
